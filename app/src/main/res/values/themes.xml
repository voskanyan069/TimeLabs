<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TimerLabs" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/secondary_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">#254164</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TimerButton" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/accent_color</item>
        <item name="colorOnPrimary">@color/secondary_color</item>
    </style>

    <style name="Theme.TimerButton.StopwatchButton" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/secondary_color</item>
    </style>

    <style name="Theme.Appbar.Selected" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/secondary_color</item>
        <item name="colorOnPrimary">@color/primary_color</item>
    </style>

    <style name="Theme.Appbar.NotSelected" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/secondary_color</item>
    </style>

    <style name="Theme.TimerLabs.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TimerLabs.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TimerLabs.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>